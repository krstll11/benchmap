<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_review_item"
    android:padding="12dp"
    android:layout_marginBottom="12dp">

    <!-- ВЕРХНЯЯ ЧАСТЬ: Автор и Дата -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Автор"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата"
            android:textSize="12sp"
            android:textColor="#666666"/>
        <ImageView
            android:id="@+id/btnDeleteReview"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- ОЦЕНКА -->
    <TextView
        android:id="@+id/tvRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="★ 5"
        android:textColor="#FF9800"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- РАЗДЕЛИТЕЛЬ -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="8dp"/>

    <!-- ХАРАКТЕРИСТИКИ (СЕТКА) -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4">

        <!-- Загрязнение -->
        <TextView
            android:text="Чистота: "
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tvPollution"
            android:text="-"
            android:textColor="#333333"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="4dp"/>

        <!-- Состояние -->
        <TextView
            android:text="Состояние: "
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tvCondition"
            android:text="-"
            android:textColor="#333333"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="4dp"/>

        <!-- Материал -->
        <TextView
            android:text="Материал: "
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tvMaterial"
            android:text="-"
            android:textColor="#333333"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="4dp"/>

        <!-- Места -->
        <TextView
            android:text="Мест: "
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tvSeating"
            android:text="-"
            android:textColor="#333333"
            android:textSize="12sp"
            android:layout_marginStart="4dp"/>
    </GridLayout>

    <!-- Комментарий (для будущего) -->
    <TextView
        android:id="@+id/tvComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:text="Комментарий"
        android:visibility="gone"/>

</LinearLayout>