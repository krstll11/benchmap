<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_review_item"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <!-- Верхняя часть: Автор, Дата, Оценка -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User123"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01.01.2024"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tvRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="★ 5"
            android:textColor="#FF9800"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="6dp"/>

    <!-- Детали (Сетка характеристик) -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4">

        <!-- Загрязнение -->
        <TextView
            android:text="Чистота:"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:id="@+id/tvPollution"
            android:text="Чисто"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"/>

        <!-- Состояние -->
        <TextView
            android:text="Состояние:"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:id="@+id/tvCondition"
            android:text="Новое"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"/>

        <!-- Материал -->
        <TextView
            android:text="Материал:"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:id="@+id/tvMaterial"
            android:text="Дерево"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"/>

        <!-- Места -->
        <TextView
            android:text="Мест:"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:id="@+id/tvSeating"
            android:text="2"
            android:textSize="12sp"/>

    </GridLayout>

    <!-- Комментарий (если есть поле comment в модели Review) -->
    <TextView
        android:id="@+id/tvComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Хорошее место!"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"
        android:visibility="gone"/>

</LinearLayout>